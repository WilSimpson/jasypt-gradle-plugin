# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset                     = utf-8
end_of_line                 = lf
insert_final_newline        = true
trim_trailing_whitespace    = true

[*.gradle]
indent_style                = tab
tab_width                   = 4

[*.java]
indent_style                = space
indent_size                 = 4
max_line_length             = 120
